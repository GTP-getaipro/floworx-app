{
  "name": "floworx-backend",
  "version": "1.0.0",
  "description": "Secure backend API for Floworx SaaS application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "lint:report": "eslint . --ext .js --format html --output-file reports/eslint-report.html",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:diff": "prettier --list-different .",
    "security:audit": "npm audit",
    "security:audit:fix": "npm audit fix",
    "security:audit:report": "npm audit --json > reports/npm-audit.json",
    "security:snyk": "npx snyk test",
    "quality:check": "npm run lint && npm run format:check && npm run security:audit",
    "quality:fix": "npm run lint:fix && npm run format",
    "quality:report": "npm run lint:report && npm run security:audit:report",
    "pre-commit": "npm run quality:check && npm run test",
    "performance:audit": "node scripts/performance-audit.js",
    "performance:cache:clear": "node -e \"require('./services/cacheService').clear().then(() => console.log('Cache cleared'))\"",
    "performance:cache:stats": "node -e \"require('./services/cacheService').getStats().then(stats => console.log(JSON.stringify(stats, null, 2)))\"",
    "pre-push": "npm run quality:check && npm run test:coverage",
    "build:check": "node -c server.js",
    "deploy:check": "npm run quality:check && npm run test:coverage && npm run build:check",
    "prepare": "husky install",
    "quality:full": "node scripts/quality-check.js"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test",
      "pre-push": "npm run quality:check",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "axios": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "express-slow-down": "^3.0.0",
    "express-validator": "^7.2.1",
    "googleapis": "^126.0.1",
    "helmet": "^7.2.0",
    "ioredis": "^5.7.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "prisma": "^6.15.0",
    "redis": "^5.8.2",
    "validator": "^13.15.15",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "colors": "^1.4.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.6",
    "nodemon": "^3.0.1",
    "prettier": "^3.6.2",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "api",
    "oauth",
    "authentication"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0"
  }
}
