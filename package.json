{
  "name": "floworx-invite",
  "version": "1.0.0",
  "description": "SaaS application with secure backend and React frontend",
  "main": "index.js",
  "scripts": {
    "setup": "node setup.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm start",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "build": "cd frontend && npm install && npm run build",
    "vercel-build": "cd frontend && npm install && npm run build",
    "start": "cd backend && npm start",
    "test": "cd backend && npm test && cd ../frontend && npm test",
    "db:setup": "psql -d floworx_db -f backend/database/schema.sql"
  },
  "keywords": [
    "saas",
    "oauth",
    "automation"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^23.0.0",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.5",
    "concurrently": "^8.2.2",
    "cypress": "^15.0.0",
    "cypress-mochawesome-reporter": "^4.0.2",
    "esbuild": "^0.25.9",
    "multiple-cucumber-html-reporter": "^3.9.3"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.56.1",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.1",
    "faker": "^6.6.6",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.6",
    "pg": "^8.16.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
